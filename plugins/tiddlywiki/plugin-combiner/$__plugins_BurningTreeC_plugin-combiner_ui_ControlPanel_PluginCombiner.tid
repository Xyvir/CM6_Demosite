caption: Plugin Combiner
tags: $:/tags/ControlPanel
title: $:/plugins/BurningTreeC/plugin-combiner/ui/ControlPanel/PluginCombiner

\procedure plugin-combiner(prefix)
<$plugin-combiner
  filter="[plugin-type[plugin]prefix<prefix>]"
/>
\end

<div class="tc-plugin-combiner-wrapper">
<div class="tc-plugin-combiner-prefix">
<label>Plugin namespace:</label>
<$edit-text tag="input" tiddler="$:/temp/plugin-combiner/prefix" placeholder="$:/plugins/yourname/"/>
</div>
<$transclude $variable="plugin-combiner" prefix={{{ [[$:/temp/plugin-combiner/prefix]get[text]] }}}/>
</div>